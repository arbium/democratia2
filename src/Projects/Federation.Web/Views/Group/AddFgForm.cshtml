@using Federation.Web.ViewModels
@model GroupAddFgFormViewModel
@{
    ViewBag.Title = "Добавление группы в друзья";
}

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    @Html.Partial("_NavigationBox", new _NavigationBoxViewModel(Model.GroupId, NavigationBoxType.Group))
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        @using (Html.BeginForm("addfriendlygroup", "group", FormMethod.Get, new { id = "add-fg-form" }))
        {
            @Html.HiddenFor(x => Model.GroupUrl, new { name = "id" })
            @Html.TextBox("fg", null, new { placeholder = "Url группы" })
            <input type="submit" value="Добавить" />
        }
    </div>
</div>