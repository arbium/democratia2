@using Federation.Web.ViewModels
@model GroupEditExpertInfoViewModel
@{
    ViewBag.Title = "Ваши экспертные компетенции";
}

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    <div class="form_help">
        <h3>
            Редактирование эксперта<br />
            @Html.ActionLink(Model.GroupName, "index", new { id = Model.GroupUrl })
        </h3>
        <p>
            Каждый участник системы может объявить
            себя <b>экспертом</b> или, другими словами, соискателем голосов по
            определенному вопросу или вопросам, претендуя на то, чтобы стать, таким
            образом, делегатом других участников системы.
        </p>
    </div>
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        <div class="styled_form">
            @using (Html.BeginForm())
            {
                <div class="form_block">
                    @Html.HiddenFor(m => m.GroupUrl)
                    @Html.HiddenFor(m => m.GroupId)
                    @Html.HiddenFor(m => m.ReturnUrl)
                    <div class="input_block">
                        <div>Информация о вас как об эксперте:</div>
                        <div style="margin: 10px 0">
                            @Html.TextAreaFor(x => x.Info, new { cols = 55, rows = 5 })
                        </div>
                    </div>
                </div>
                <div class="submit_block">
                    <input type="submit" value="Сохранить" />
                </div>              
            }
        </div>
    </div>
</div>