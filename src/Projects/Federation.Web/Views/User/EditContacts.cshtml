@using Federation.Web.ViewModels
@model UserEditContactsViewModel
@{
    ViewBag.Title = "Редактирование контактных данных";
}

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    @Html.Partial("_NavigationBox", new _NavigationBoxViewModel(UserContext.Current.Id, NavigationBoxType.User))
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>            
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        <div class="styled_form">
            @if (!string.IsNullOrEmpty(ViewBag.ValidationExceptionText))
            {
                <div class="validation_block">
                    @ViewBag.ValidationExceptionText
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.IsFbEditable)
                @Html.HiddenFor(m => m.IsLjEditable)
                <div class="form_block">
                    <div class="input_block">
                        <div class="title">
                            @Html.LabelFor(m => m.Facebook)
                        </div>
                        @if (Model.IsFbEditable)
                        {
                            @Html.TextBoxFor(m => m.Facebook)
                        }
                        else
                        {
                            @Html.DisplayTextFor(m => m.Facebook)
                            @Html.HiddenFor(m => m.Facebook)
                            <a href="@Url.Action("profilechangerequest")">подать заявку на изменение данных</a>
                        }
                        @Html.ValidationMessageFor(m => m.Facebook)
                    </div>
                    <div class="input_block separator">
                        <div class="title">
                            @Html.LabelFor(m => m.LiveJournal)
                        </div>
                        @if (Model.IsLjEditable)
                        {
                            @Html.TextBoxFor(m => m.LiveJournal)
                        }
                        else
                        {
                            @Html.DisplayTextFor(m => m.LiveJournal)
                            @Html.HiddenFor(m => m.LiveJournal)
                            <a href="@Url.Action("profilechangerequest")">подать заявку на изменение данных</a>
                        }
                        @Html.ValidationMessageFor(m => m.LiveJournal)
                    </div>
                    <div class="input_block">
                        @Html.CheckBoxFor(m => m.LJSindication)
                        @Html.LabelFor(m => m.LJSindication)
                    </div>
                    <div class="input_block">
                        @Html.CheckBoxFor(m => m.LJPublishState)
                        @Html.LabelFor(m => m.LJPublishState)
                    </div>
                </div>
                <div class="submit_block">
                    <input type="submit" value="Сохранить" />
                </div>
            }
        </div>
	</div>
</div>