@using Federation.Web.ViewModels
@model UserEditViewModel
@{
    ViewBag.Title = "Редактирование профиля";
}

<style type="text/css">
    .user_profile_avatar {
	    float: left; 
	    width: 112px;
    }
    .user_profile_avatar > img {
	    width: 100px;
	    height: auto;
	    padding: 5px;
	    border: #ccc 1px solid;
	    background: #eee;
    }
    .user_profile_maindata {
	    margin-left: 130px;
	    border-right: #ccc 1px solid;
    }
    .user_profile_header {
	    width: 500px;
	    float: left;
    }
    .user_profile_about {
	    margin-left: 500px;
    }
    .user_profile_about > div 
    {
        width:70%;
    }

    .user_profile_contacts {
	    margin-top: 15px;
    }
    .user_profile_social {
	    margin-top: 15px;
    }

