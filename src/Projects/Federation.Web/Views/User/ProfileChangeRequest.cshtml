@using Federation.Web.ViewModels
@model UserProfileChangeRequestViewModel
@{
    ViewBag.Title = "Запрос на изменение данных";
}

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    @Html.Partial("_NavigationBox", new _NavigationBoxViewModel(Model.UserId, NavigationBoxType.User))
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        <div class="styled_form">
            @if (!string.IsNullOrEmpty(ViewBag.ValidationExceptionText))
            {
                <div class="validation_block">
                    @ViewBag.ValidationExceptionText
                </div>
            }
            @using (Html.BeginForm())
            {
                <div class="form_block">
                    <div class="input_block">
                        <div class="title">
                            @Html.LabelFor(m => m.Surname)
                            <span class="required">*</span>
                        </div>
                        @Html.TextBoxFor(m => m.Surname) 
                        @Html.ValidationMessageFor(m => m.Surname)
                    </div>
                    <div class="input_block">
                        <div class="title">
                            @Html.LabelFor(m => m.Firstname)
                            <span class="required">*</span>
                        </div>
                        @Html.TextBoxFor(m => m.Firstname) 
                        @Html.ValidationMessageFor(m => m.Firstname)
                    </div>
                    <div class="input_block">
                        <div class="title">
                            @Html.LabelFor(m => m.Patronymic)
                            <span class="required">*</span>                            
                        </div>
                        @Html.TextBoxFor(m => m.Patronymic) 
                        @Html.ValidationMessageFor(m => m.Patronymic)
                    </div>
                    <div class="input_block separator">
                        <div class="title">
                            @Html.LabelFor(m => m.Facebook)
                        </div>
                        @Html.TextBoxFor(m => m.Facebook)
                        @Html.ValidationMessageFor(m => m.Facebook)
                    </div>
                    <div class="input_block">
                        <div class="title">
                            @Html.LabelFor(m => m.LiveJournal)
                        </div>
                        @Html.TextBoxFor(m => m.LiveJournal)
                        @Html.ValidationMessageFor(m => m.LiveJournal)
                    </div>
                    <div class="input_block separator">
                        <div class="title">
                            @Html.LabelFor(m => m.PhoneNumber)
                            <span class="required">*</span>                            
                        </div>
                        @Html.TextBoxFor(m => m.PhoneNumber)
                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                    </div>
                    <div class="input_block separator">
                        <div class="title">
                            @Html.LabelFor(m => m.Comment)
                            <span class="required">*</span>                            
                        </div>
                        @Html.TextAreaFor(m => m.Comment)
                        @Html.ValidationMessageFor(m => m.Comment)
                    </div>
                </div>
                <div class="submit_block">
                    <input type="submit" value="Отправить" />
                </div>
            }
        </div>
    </div>
</div>