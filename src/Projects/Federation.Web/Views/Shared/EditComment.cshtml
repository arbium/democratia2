@using Federation.Web.ViewModels
@model EditCommentViewModel
@{
    ViewBag.Title = "Редактирование комментария";
}

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    @if (Model.GroupId.HasValue)
    {
        @Html.Partial("_NavigationBox", new _NavigationBoxViewModel(Model.GroupId.Value, NavigationBoxType.Group))
    }
    else if (Model.AuthorId.HasValue)
    {
        @Html.Partial("_NavigationBox", new _NavigationBoxViewModel(Model.AuthorId.Value, NavigationBoxType.User))
    }    
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        @using (Html.BeginForm("edit", "comment"))
        {
            <div class="form_block">
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.ReturnUrl)
                @Html.ValidationMessageFor(m => m.Text)
                @Html.TextAreaFor(m => m.Text, new { style = "width: 99%; max-width: 99%; min-width: 99%; height: 100px" })
            </div>
            <div class="submit_block">
                <input type="submit" value="Ок" class="f_button" style="vertical-align: bottom" />
            </div>
        }
    </div>
</div>