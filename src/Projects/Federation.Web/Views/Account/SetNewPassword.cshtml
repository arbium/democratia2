@using Federation.Web.ViewModels
@model AccountSetNewPasswordViewModel
@{
    ViewBag.Title = "Восстановление пароля";
    ViewBag.LayoutStyle = "layout_start";
}

@Html.Partial("_MainMenu")

<div class="layout_pageheader"></div>
<div class="layout_sidemenu">
    <div class="form_help">
        <p>Введите Ваш новый пароль</p>
    </div>
</div>
<div class="layout_content">
    <div class="lighttabs_container">
        <ul class="lighttabs">
            <li>
                <a class="back">◄</a>
            </li>
            <li>
                <a class="selected">@ViewBag.Title</a>
            </li>
        </ul>
        <div class="lighttabs_border"></div>
    </div>
    <div class="body">
        <div class="styled_form">
            @if (!string.IsNullOrEmpty(ViewBag.ValidationExceptionText))
            {
                <div class="validation_block">
                    @ViewBag.ValidationExceptionText
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.RecoverKey)
		        <div class="form_block">
			        <div class="input_block">
				        <div class="title">
					        @Html.LabelFor(m => m.NewPassword)<span class="required">*</span>
				        </div>
					    @Html.PasswordFor(m => m.NewPassword)
                        @Html.ValidationMessageFor(m => m.NewPassword)
			        </div>
		        </div>
		        <div class="submit_block">
			        <input type="submit" value="Восстановить" />
		        </div>
            }
        </div>
    </div>
</div>